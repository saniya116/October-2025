#include <stdio.h>
int main() {
    int arr[100], n;
    int *ptr;
    int i;
    printf("Enter number of elements (max 100): ");
    scanf("%d", &n);
    ptr = arr;
    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        printf("Element %d: ", i + 1);
        scanf("%d", (ptr + i));  // Using pointer to read
    }
    printf("\nArray elements are:\n");
    for (i = 0; i < n; i++) {
        printf("Element %d = %d\n", i + 1, arr[i]); 
    }
    return 0;
}
