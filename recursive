#include <stdio.h>
long factorial(int n) {
    if (n < 0) {
        return -1;
    }
    if (n == 0 || n == 1) {
        return 1;  
    }
    return n * factorial(n - 1);  
int main() {
    int num;
    printf("Enter a non-negative integer: ");
    scanf("%d", &num);
    long result = factorial(num);
    if (result < 0) {
        printf("Factorial not defined for negative numbers.\n");
    } else {
        printf("Factorial of %d = %ld\n", num, result);
    }
    return 0;
}
